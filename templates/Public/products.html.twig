{% extends "public/base.html.twig" %}

{% block main %}

    <div class="title">
        <h1>Toutes les figurines</h1>
    </div>
    <section id="products-list">
        {% for productadd  in products %}
            <div class="card-figure">
                <div class="card-container">
                    <article>
                        <div class="card-detail">
                            <a href="{{ path('admin_product', {"id": productadd.id}) }}"><img src="{{ asset('uploads/cover/'~productadd.picture) }}" alt=""></a>
                                <div class="like">
                                    <a href="{{ path('wishlist_create', {"id": productadd.id}) }}"><img src="../public/assets/img/like-black.png"/></a>
                                </div>
                            <div class="card-content">
                                <h4>{{ productadd.name }} {{ productadd.manufacturer }}</h4>
                                <h4>Cote: {{ productadd.price }}â‚¬</h4>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        {% endfor %}
    </section>


{% endblock main %}
