{% extends "public/base.html.twig" %}

{% block main %}

    <section id="product">
        <img src="{{ asset('uploads/cover/'~product.picture) }}" alt="">
            <article id="product-elements">
                <div class="btn-back">
                    <a id="all-figures" href="{{ path('home') }}">ACCUEIL</a>
                    <a id="all-figures" href="{{ path('products') }}">TOUTES LES FIGURINES</a>
                </div>
                    <h3>{{ product.name }}</h3>
                    <p><strong>Episode:</strong> {{ product.episode }}</P>
                    <p><strong>Fabricant:</strong> {{ product.manufacturer }}</p>
                    <p><strong>Catégorie:</strong> {{ product.category }}</p>
                    <p><strong>Description:</strong> {{ product.description }}</p>
                    <p id="estimate">Cote: {{ product.price }}€</p>
            </article>
    </section>

{% endblock main %}
