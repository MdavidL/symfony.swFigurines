{% extends 'public/base.html.twig' %}

{% block main %}

    <div class="bg-white p-5 contact-form">
        <div class="form-group">
            {{ form_start(contactForm) }}
            {{ form_row(contactForm.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(contactForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(contactForm.message, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
        </div>
        {{ form_end(contactForm) }}
    </div>

{% endblock main %}